FROM ghcr.io/space-station-os/space_station_os

# Install build dependencies
RUN apt update && \
    apt install -y ninja-build gettext libtool libtool-bin autoconf automake cmake g++ pkg-config unzip curl git

# Clone, build, and install the latest Neovim
RUN git clone https://github.com/neovim/neovim.git /usr/src/neovim && \
    cd /usr/src/neovim && \
    make CMAKE_BUILD_TYPE=Release && \
    make install
